{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@claims-askes/*": ["packages/*/src"],
      "@backend/*": ["backend/*/src"],
      "@frontend/*": ["frontend/*/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "coverage"]
}
